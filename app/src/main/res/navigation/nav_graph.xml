<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listaFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/crearCuentaFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.CrearCuenta"
        android:label="fragment_crear_cuenta"
        tools:layout="@layout/activity_crear_cuenta" />
    <fragment
        android:id="@+id/listaFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.ListaFragment"
        android:label="fragment_lista"
        tools:layout="@layout/fragment_lista" >
        <action
            android:id="@+id/action_listaFragment_to_detalleFragment"
            app:destination="@id/detalleFragment" />
        <action
            android:id="@+id/action_listaFragment_to_modificarFragment"
            app:destination="@id/modificarFragment" />
    </fragment>
    <fragment
        android:id="@+id/detalleFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.DetalleFragment"
        android:label="fragment_detalle"
        tools:layout="@layout/fragment_detalle" />
    <fragment
        android:id="@+id/modificarFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.ModificarFragment"
        android:label="fragment_modificar"
        tools:layout="@layout/fragment_modificar" />
    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.FavoritosFragment"
        android:label="fragment_favoritos"
        tools:layout="@layout/fragment_favoritos" >

    </fragment>
    <fragment
        android:id="@+id/buscadorFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.BuscadorFragment"
        android:label="fragment_buscador"
        tools:layout="@layout/fragment_buscador" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.javiervillaverde.proyectokotlin.ui.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil" />

</navigation>